<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>Personal Organiser</title>
</head>

<body>
    <!--For alligning menu icon and title-->
    <div class="title-bar">
        <div id="burger-menu" onclick="openNav()">
                <span class="bar"></span>
                <span class="bar"></span>
                <span class="bar"></span>
            </div>
        <!--Navigation Menu-->
        <div id="nav-menu">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div id="nav-options">
                <a href="/">Home</a>
                <a href="/calendar">Calendar</a>
                <a href="/lists">Lists</a>
                <a href="/notes">Notes</a>
                <a href="/recipes">Recipes</a>
                <a href="/account">Account</a>
                <div id="spacer"></div>
                <a href="/logout">LOGOUT</a>
            </div>
        </div>

        <header>
            <h1>Calendar</h1>
        </header>
    </div>

    <!--Main section - contains the pages content-->
    <main id="calendar-main">
        
        <!--Section for user interaction-->
        <section id="calendar-actions">    
            <!--Calendar View-->
            <div class="calendar">
                <div class="month">
                    <p><i class="arrow left prev"></i></p>
                    <div class="date">
                        <h2></h2>
                        <p></p>
                    </div>
                    <p><i class="arrow right next"></i></p>
                </div>
                <div class="weekdays">
                    <div>Sun</div>
                    <div>Mon</div>
                    <div>Tue</div>
                    <div>Wed</div>
                    <div>Thur</div>
                    <div>Fri</div>
                    <div>Sat</div>
                </div>
                <div class="days">
                </div>
            </div>

            <div class="calendar-buttons">
                <button id="open-form-button">ADD EVENT</button>
                <button id="delete-event-button" onclick="showEditingButtons()">EDIT EVENTS</button>
            </div>

            <!--Adding New Event Form-->
            <dialog class="newEvent" id="newEvent">
                <button id="exit-btn">X</button>
                <div class="form-input">
                    <form>
                        <label for="eventName">Event name:</label><br>
                        <input type="text" id="eventName" name="eventName"><br>
                        <label for="date">Date:</label><br>
                        <input type="datetime-local" name="datetime" id="datetime"><br>
                        <label for="eventType">Event type:</label><br>
                        <div id="eventType">
                            <select name="eventType" id="eventType">
                                <option value="Appointment">Appointment</option>
                                <option value="Birthday">Birthday</option>
                                <option value="Meeting">Meeting</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <label for="EvtNote">Notes:</label><br>
                        <input type="text" id="EvtNote" name="EvtNote"><br>
                        <button id="add"type="submit" formaction="/calendar" formmethod="post">Add Event</button>
                    </form>
                </div>
            </dialog>
        </section>

        <!--Section of upcoming events-->
        <section id="events">
            {{#events}}
            <table class="event-table">
                <tr>
                    <th class="event-title-col">Event name:</th>
                    <td class="event-title-output">{{eventName}}</td>
                    <td class="event-spacer"></td>
                </tr>
                <tr>
                    <th class="event-title-col">Date:</th>
                    <td class="event-title-output">{{date}}</td>
                    <td class="event-spacer"></td>
                </tr>
                <tr>
                    <th class="event-title-col">Notes:</th>
                    <td class="event-title-output">{{note}}</td>
                    <td class="event-spacer">
                    <!--<button class="editEvent" id="editEvent" hidden="true">EDIT</button>-->
                    <a href="calendar/{{_id}}" class="editEvent" hidden="true">UPDATE</a>
                    </td>
                </tr>
                <tr>
                    <th class="event-title-col">Event Type:</th>
                    <td class="event-title-output">{{eventType}}</td>
                    <td id="event-button">
                        <button class="removeEvent" id="removeEvent" hidden="true">
                            <div class="tooltip">REMOVE
                                <span class="tooltip-warning">This will permanently remove event!</span>
                            </div>
                        </button>
                    </td>
                </tr>
            </table>
            {{/events}}
            <button class="edit-complete" id="edit-complete" hidden="true">DONE</button>
        </section>
    </main>

    <script src="./JavaScript/calendar.js"></script>
</body>

</html>