<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>IP3 Diary</title>
</head>

<body>
    <!--For alligning menu icon and title-->
    <div class="title-bar">
        <div id="burger-menu" onclick="openNav()">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
        <!--Navigation Menu-->
        <div id="nav-menu">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
            <div id="nav-options">
                <a href="/">Home</a>
                <a href="/calendar">Calendar</a>
                <a href="/lists">Lists</a>
                <a href="/notes">Notes</a>
                <a href="/recipes">Recipes</a>
                <a href="/account">Account</a>
                <a href="/admin" class="hide">Admin</a>
                <div id="spacer"></div>
                <a href="/logout">LOGOUT</a>
            </div>
        </div>

        <header>
            <h1>Welcome {{user.forename}}</h1>
        </header>
    </div>

    <main id="landing-main">
        <section id="Landing-left">
            <!--Displays latest note from user-->
            <div class="landing-left-inner">
                <h3>Most Recent Note</h3><br>
                <ul id="list" class="landing-list">
                    {{#notes}}
                    <h3>Title:&ensp;{{title}}</h3><hr><br>
                    <li> {{content}}</li>
                    {{/notes}}
                </ul>
                <br>
            </div>
            <!--Displays latest list by user-->
            <div class="landing-left-inner">
                <h3>Most Recent List</h3><br>
                <ol id="list" class="landing-list">
                    {{#lists}}
                    <h3>Title:&ensp;{{title}}</h3><hr><br><br>
                        <li class="lists-point"> {{item1}}</li>
                        <li class="lists-point"> {{item2}}</li>
                        <li class="lists-point"> {{item3}} </li>
                        <li class="lists-point"> {{item4}} </li>
                        <li class="lists-point"> {{item5}} </li>
                        <li class="lists-point"> {{item6}} </li>
                        <li class="lists-point"> {{item7}} </li>
                        <li class="lists-point"> {{item8}} </li>
                        <li class="lists-point"> {{item9}} </li>
                        <li class="lists-point"> {{item10}} </li>
                    {{/lists}}
                    <br><br>
                </ol>
            </div>
        </section>
        <!--Displays 5 closest events from users calendar-->
        <section id="landing-right">
            <h3>Upcoming Calendar Events</h3><br>
            <!--For 1 calendar event-->
             <ul id="landing-event">
                {{#events}}  
                    <li class="event">
                        <div id="event-content">
                            <h3>Name: <span class="inliner">{{eventName}}</span></h3><hr>
                            <p>Date: <span class="date">{{date}}</span></p><hr>
                            <p>Event Type: <span>{{eventType}}</span></p><hr>
                            <p>Notes: <span>{{note}}</span></p>
                        </div>
                    </li>
                {{/events}}
            </ul>
        </section>
</main>
<script src="./JavaScript/landing.js"></script>
</body>

</html>